{% extends 'base.html.twig' %}

{% block title %}AMD37{% endblock %}

{% block body %}
<div class="as-hero-wrapper hero-1" id="hero">
    <div class="hero-slider-1 number-dots as-carousel" id="heroSlide1" data-fade="true" data-slide-show="1" data-md-slide-show="1" data-dots="true" data-xl-dots="true" data-ml-dots="true" data-lg-dots="true">
        <div class="as-hero-slide">
            <div class="as-hero-bg" data-bg-src="assets/img/hero/vehicule.png"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <div class="hero-style1">
                            <span class="hero-subtitle" data-ani="slideinleft" data-ani-delay="0.1s">
                                ATELIER DE MECANIQUE A DOMICILE
                            </span>
                            <h1 class="hero-title text-white" data-ani="slideinleft" data-ani-delay="0.2s">Là ou l’expertise rencontre les moteurs</h1>
                            <div class="btn-group" data-ani="slideinleft" data-ani-delay="0.4s">
                                <a href="{{ path('app_about') }}" class="as-btn style2">DETAILS</a>
