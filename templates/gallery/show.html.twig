{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gallery.title }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ gallery.filename }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ gallery.position }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ gallery.createdAt ? gallery.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gallery_index') }}">back to list</a>

    <a href="{{ path('app_gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
