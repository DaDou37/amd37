{% extends 'base.html.twig' %}

{% block title %}Projets : {{ category.name }}{% endblock %}

{% block body %}
<!--==============================
    Breadcumb
============================== -->
<div class="breadcumb-wrapper" data-bg-src="assets/img/hero/vehicule.png" data-overlay="title" data-opacity="7">
    <!-- bg animated image/ -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="breadcumb-content">
                    <h1 class="breadcumb-title">Projet Détaillé</h1>
                    <ul class="breadcumb-menu">
                        <li><a href="/">ACCUEIL</a></li>
                        <li class="active">PROJET DETAILLE</li>
                    </ul>
                </div>
            </div>
        </div>
        
    </div>
</div>
    <section class="space">
        <div class="container">
            <h1>Projets pour : {{ category.name }}</h1>
            <p>{{ category.description }}</p>

            <div class="row gy-4">
                {% for project in projects %}
                    <div class="col-md-4">
                        <div class="card">
                            {% if project.image %}
                                <img src="{{ asset(project.image) }}" class="card-img-top" alt="{{ project.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ project.title }}</h5>
                                <p class="card-text">{{ project.description|slice(0, 100) ~ '...' }}</p>
                                <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p>Aucun projet pour cette catégorie pour le moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
