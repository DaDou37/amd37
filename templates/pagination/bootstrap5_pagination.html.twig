<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link custom-pagination-link" href="{{ previous }}" aria-label="Previous">&laquo;</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link custom-pagination-link">&laquo;</span>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page == current %}
                <li class="page-item active" aria-current="page">
                    <span class="page-link custom-pagination-link">{{ page }}</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link custom-pagination-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <li class="page-item">
                <a class="page-link custom-pagination-link" href="{{ next }}" aria-label="Next">&raquo;</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link custom-pagination-link">&raquo;</span>
            </li>
        {% endif %}
    </ul>
</nav>
